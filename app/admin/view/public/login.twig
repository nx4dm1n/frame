<body class="signwrapper">
<div class="sign-overlay"></div>
<div class="signpanel"></div>

<div class="panel signin">
    <div class="panel-heading">
        <h1>{{ site_name }}</h1>
    </div>
    <div class="panel-body">
        <form>
            <div class="form-group mb10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" name="username" class="form-control" placeholder="请输入用户名" data-check='noNull' data-tip='用户名不允许为空'>
                </div>
            </div>
            <div class="form-group nomargin">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" name="password" class="form-control" placeholder="请输入密码" data-check='noNull' data-tip='密码不允许为空'>
                </div>
            </div>
            <div><a href="get_password.html" class="forgot">忘记密码？点击找回</a></div>
            <div class="form-group">
                <button type="button" data-role="submit" data-type="post" data-target="form" class="btn btn-success btn-quirk btn-block" data-action="{{ webroot_path }}admin/public/login.html"  data-href="{{ webroot_path }}admin/index/index.html">登录</button>
            </div>
        </form>
    </div>
</div><!-- panel -->


<script>
    $(document).ready(function(){
        //$('[data-action]').momoAjax();
        $(document).bind('keydown',function(event) {
            if (event.keyCode == 13) {
                event.preventDefault();
                $('button[data-role="submit"]').trigger('click');
            }
        });
    });
</script>
</body>
</html>
